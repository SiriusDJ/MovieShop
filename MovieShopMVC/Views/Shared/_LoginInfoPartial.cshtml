@*if user is authenticated show firstname and last name
drop down: 
purchased movies user/purchase
favorite account  user/favorites
info -> user/edit
logout -logout and redirect to login page
else: show links, 
register -> account/register 
login -> account/login*@

@using MovieShopMVC.Services;

@inject ICurrentUser currentUser

@if (currentUser.IsAuthenticated)
{
    <div class = "text-end">
        <ul class="nav">
            <li class = "nav-item dropdown text-capitalize">
                <a class = "nav-link dropdown-toggle" data-bs-toggle = "dropdown" aria-expanded = "false">
                    @currentUser.FullName
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-controller="User" asp-action = "Purchases">Library</a></li>
                        <li><a class="dropdown-item" asp-controller="User" asp-action = "Favorites">Favorites</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action = "Profile">Account</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action = "Logout">Logout</a></li>
                </ul>
            </li>
            
        </ul>
    </div>

}
else
{
    <div class = "text-end">
        <a class = "btn btn-outline-primary me-2 btn" asp-controller="Account" asp-action = "Login">
            Login
        </a>
        <a class = "btn btn-outline-primary me-2" asp-controller="Account" asp-action = "Register">
            Register
        </a>
    </div>
}
